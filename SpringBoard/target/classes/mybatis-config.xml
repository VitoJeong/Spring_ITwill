<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- xml 태그 형태로 여러가지 데이터를 저장, 처리 타입 -->
<!-- 사용 목적에 맞춰서 사용하기 위해선 DTD/XML스키마 지정 -->

<configuration>
 	
 	<!-- Mapper에서 parameterType, resultType을 사용할 때
 		타입의 경로를 전부 작성하지 않고 미리 등록해서 타입만 사용하는 방법
 	 -->
 	<!-- MyBatis에서 리턴되는 타입의 패키지를 미리 등록 -->
	<typeAliases>
		<package name="com.itwillbs.domain"/>
	</typeAliases>

</configuration>